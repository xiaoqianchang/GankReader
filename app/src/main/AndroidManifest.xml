<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.xiaoqianchang.gankreader"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".app.GankApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TransitionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ViewBigPicTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ViewBigPicTheme">
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.NavHomePageActivity">
        </activity>
        <activity android:name=".activity.NavDownloadActivity">
        </activity>
        <activity android:name=".activity.NavFeedBackActivity">
        </activity>
        <activity android:name=".activity.NavAboutActivity">
        </activity>
    </application>

</manifest>